<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Login</title>

<link type="text/css" rel="stylesheet" href="../1995theater.css">
 

<script>
function writeCheck(){
	var form = document.loginForm;
	if(!form.id.value){
		alert("ID(email)를 입력해 주세요!");
		form.id.focus();
		return;
	}
	
	if(!form.pass.value){
		alert("비밀번호를 입력해 주세요!");
		form.pass.focus();
		return;
	}
	form.submit();
	
}

</script>
</head>
<body>

	  <center>
	    <h1>LOGIN</h1>
	    <p>
	      <hr>
	      <form name=loginForm method=POST action="loginCheck.jsp">
	        <table>
	          <tr>
	            <td>ID : </td>
	            <td><input type="text" name="id"></td>
	          </tr>
	          <tr>
	            <td>PW : </td>
	            <td><input type="password" name="pass"></td>
	          </tr>
	          <tr>
	            <td colspan=2>
	              <center>
	                <input type="button" onclick="writeCheck();" value="로그인">
	                <input type="reset" value="취소">
	              </center>
	            </td>
	          </tr>
	        </table>
	      </form>
	    </p>
	    <hr>
	    <table>
	      <tr>
	        <td><a href="registration.jsp">회원가입</a>을 하신 후 이용하실 수 있습니다.</td>
	      </tr>

	    </table>
	  </center>






</body>
